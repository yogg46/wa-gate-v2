# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Security
LARAVEL_API_KEY=your_secret_key_here_min_32_chars
SESSION_SECRET=your_session_secret_min_32_chars
LOGIN_USERNAME=admin
LOGIN_PASSWORD=strong_password_here

# Laravel Integration
LARAVEL_WEBHOOK_URL=https://your-laravel-app.com/api/wa-webhook

# WhatsApp Configuration
WA_KEYWORDS=pinjam ruang,lihat ruang
WA_AUTO_RECONNECT=true
WA_MAX_RECONNECT_ATTEMPTS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
